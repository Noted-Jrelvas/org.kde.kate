{
    "id": "org.kde.kate",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-23.08",
    "sdk": "org.kde.Sdk",
    "command": "kate",
    "rename-icon": "kate",
    "finish-args": [
        "--device=dri",
        "--filesystem=host",
        "--share=ipc",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.UDisks2",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "modules": [
        {
            "name": "markdownpart",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.5/src/markdownpart-23.08.5.tar.xz",
                    "sha256": "32905b77e393f625c388c414b9e350d8152856e6931566d5f2b8c35ed6d5ebf2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/markdownpart-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "konsole",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.5/src/konsole-23.08.5.tar.xz",
                    "sha256": "c6fb20753ac27a46bce62e31f7b105b6b99497035830b34a7bba1bc60260c1ca",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konsole-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kate",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "post-install": [
                "mv /app/bin/kate /app/bin/kate-bin",
                "install -Dm755 ../kate-wrapper /app/bin/kate"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/23.08.5/src/kate-23.08.5.tar.xz",
                    "sha256": "683c49d9c4b2abd4b4660b607b65249a2adfdc48418b0d18ab90810d1a8f4e37",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kate-$version.tar.xz"
                    }
                },
                {
                    "type": "script",
                    "dest-filename": "kate-wrapper",
                    "commands": [
                        "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
                        "exec /app/bin/kate-bin \"$@\""
                    ]
                }
            ]
        }
    ]
}
